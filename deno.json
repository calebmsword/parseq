{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "example": "deno run --no-check --allow-net test.ts",
    "check": "deno check src/**/*"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "compilerOptions": {
    "checkJs": true,
    "types": [
      "./global.d.ts"
    ]
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
